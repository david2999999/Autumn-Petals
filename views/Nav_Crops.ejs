<!DOCTYPE html>
<html>
      <head>
            <meta charset="utf-8">
            <title>Autumn Petals</title>

            <link rel="stylesheet" href="/stylesheets/main_page.css" style="text/css">
            <link href="https://fonts.googleapis.com/css?family=Dancing+Script|Satisfy" rel="stylesheet">
            <link rel="stylesheet" href="/stylesheets/button.css" style="text/css">
            <link rel="stylesheet" href="/stylesheets/downloadbutton.css" style="text/css">
            <link rel="stylesheet" href="/stylesheets/image_slider.css" style="text/css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="/stylesheets/game_fishing.css" style="text/css">
            <link rel="stylesheet" href="/stylesheets/footer.css" style="text/css">
            <link rel="stylesheet" href="/stylesheets/form.css" style="text/css">
            <link rel="stylesheet" href="/stylesheets/pagination.css" style="text/css">
            <link rel="shortcut icon" type="image/x-icon" href="/Elements/favicon.ico"/>
      </head>
      <body>
          <div class="mainContent">
                  <% include ./partials/header1 %>
                  <% include ./partials/banner %>
                  <% include ./partials/header2 %>
                  </div>
                <div class="content3">
                        <% include ./partials/side_tab_game %>
                        <div class="item_content">
                              <h2 class="header_item">Crops</h2><br>
                              <div class="item_content_container">
                                  
                                  <!--gets crops from the database-->
                                  <% crops.forEach(function(crop){ %> 
                                       <div class="item_content_list">
                                              <div class="item_img">
                                                    <img src="<%= crop.img.replace("..", "") %>" alt="<%=crop.name%>">
                                             </div>
                                              <div class="description">
                                                    <%= crop.name %>
                                              </div>
                                        </div> 
                                  <% }); %>
                              </div>
                                    <!--/////////////////////////////////////////-->
                                    <!--//////////////////////////////////////-->
                                    
                                    <nav aria-label="Page navigation">
                                          <ul class="pagination">
                                                <% page = parseInt(page); %>
                                                <% if (page == 1) { %>
                                                    <li class="disabled">
                                                <% } else { %>
                                                    <li>
                                                <% } %>
                                                        <a href="/game/crops/<%=page-1%>" aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                
                                                <% var totalPage = Math.ceil(totalImages/16.0); %>
                                                <% for (var i=1; i<=totalPage;i++){ %>
                                                    <% if(page == i) { %>
                                                        <li class="<%="active disabled"%>">
                                                    <% } else { %>
                                                        <li>
                                                    <% } %>
                                                            <a class="page<%=i%>" href="/game/crops/<%=i%>"><%=i%></a>
                                                        </li>
                                                <% } %>
                                                <% if (page == totalPage){ %>
                                                    <li class="disabled">
                                                <% } else { %>
                                                    <li>
                                                <% } %>
                                                        <a href="/game/crops/<%=page+1%>" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                         </ul>
                                    </nav>
                                    <!--//////////////////////////////////////////////////////-->
                                    <!--/////////////////////////////////////////////////////-->       
                              
                        </div>
                  </div>
          </div><br><br>
            <% include ./partials/footer %>
            
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="/scripts/Fade_In.js"></script>
            <script src="/scripts/ModalLogin.js"></script>
      </body>
</html>
